<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.action.extension " value="UTF-8"/>
    <package name="/" extends="struts-default">
        <action name="login" class="loginAction" >
            <result name="success">list-index.jsp</result>
            <result name="fail">login.jsp</result>
        </action>
        <action name="add" class="addAction">
            <result name="success">user/showArticle.jsp</result>
        </action>
        <action name="show" class="showAction">
            <result name="success">list-index.jsp</result>
        </action>
    </package>
</struts>